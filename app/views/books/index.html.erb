<p id="notice"><%= notice %></p>

<h1>蔵書一覧</h1>

<table class="table table-striped">  <thead>
    <tr>
      <th>画像</th>
      <th>タイトル</th>
      <th>著者</th>
      <th>価格</th>
      <th>出版社</th>
      <th>発売日</th>
      <th>ISBN</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><img src="<%= book.book_images %>" class="img-responsive"></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= number_to_currency( book.price, unit: '¥', precision: 0) %></td>
        <td><%= book.publisher %></td>
        <td><%= book.salesdate %></td>
        <td><%= book.isbn %></td>
        <td><%= link_to '閲覧', book  ,class: "btn btn-primary btn-lg"%></td>
        <td><%= link_to '更新', edit_book_path(book)  ,class: "btn btn-primary btn-lg"%></td>
        <td><%= link_to '削除', book, method: :delete, data: { confirm: '本当に削除しますか?' }  ,class: "btn btn-primary btn-lg"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しい本追加しちゃう', new_book_path ,class: "btn btn-primary btn-lg" %>
